<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Only</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .message {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
            background-color: #fafafa;
            position: relative;
        }

        .message h2 {
            margin: 0;
            color: #007bff;
        }

        .message p {
            margin: 5px 0;
            color: #555;
        }

        .message .added {
            color: #777;
            font-size: 0.9em;
        }

        .message .user {
            color: #555;
            font-size: 0.9em;
            font-style: italic;
        }

        .delete-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #ff4d4d;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9em;
        }

        .delete-button:hover {
            background-color: #cc0000;
        }

        .create-message {
            margin-top: 30px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fafafa;
        }

        .create-message h2 {
            margin-top: 0;
            color: #333;
        }

        .create-message input,
        .create-message textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1em;
        }

        .create-message textarea {
            resize: vertical;
            min-height: 100px;
        }

        .create-message button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
        }

        .create-message button:hover {
            background-color: #0056b3;
        }

        .no-messages {
            text-align: center;
            color: #777;
        }

        nav {
            width: 100%;
            background-color: #007bff;
            padding: 10px 20px;
            display: flex;
            justify-content: flex-end;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        nav a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            margin-left: 10px;
            font-size: 1em;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        nav a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
    <!-- Navigation bar -->
    <nav>
        <a href="/user/membership">Membership</a>
        <a href="/auth/logout">Logout</a>
    </nav>

    <!-- Message display -->
    <div class="container">
        <h1>Messages</h1>
        <% if (messages.length > 0) { %>
            <% messages.forEach(message => { %>
                <div class="message">
                    <% if (user && user.admin) { %>
                        <form action="/message/<%= message.id %>/delete" method="GET" style="display: inline;">
                            <button type="submit" class="delete-button">Delete</button>
                        </form>
                    <% } %>
                    <h2><%= message.title %></h2>
                    <p><%= message.text %></p>
                    <% if (user && (user.member || user.admin)) { %>
                        <p class="added">Posted on: <%= message.added.toLocaleString() %></p>
                        <p class="user">Author: <%= message.user %></p>
                    <% } else { %>
                        <p class="added">Join as a member to see the date and author of this message.</p>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p class="no-messages">No messages found.</p>
        <% } %>

        <% if (user && (user.member || user.admin)) { %>
            <div class="create-message">
                <h2>Create a New Message</h2>
                <form action="/message" method="POST">
                    <input type="text" name="title" placeholder="Title" required>
                    <textarea name="text" placeholder="Your message" rows="4" required></textarea>
                    <button type="submit">Post Message</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
