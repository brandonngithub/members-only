<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Members Only</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="stylesheet" href="/styles/signup.css">
</head>
<body>
  <div class="container">
    <h1>Signup</h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="error-messages">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form id="signupForm" action="/user" method="POST">
      <input type="text" name="first_name" placeholder="First Name" required 
             pattern="[A-Za-z]{1,50}" title="Only letters, max 50 characters">
      <input type="text" name="last_name" placeholder="Last Name" required
             pattern="[A-Za-z]{1,50}" title="Only letters, max 50 characters">
      <input type="email" name="email" placeholder="Email" required
             pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
      <input type="password" name="password" placeholder="Password" required
             minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$"
             title="At least 8 chars, 1 uppercase, 1 lowercase, 1 number">
      <input type="password" name="confirmPassword" placeholder="Confirm Password" required
             title="Passwords must match">
      <div class="checkbox-container">
        <input type="checkbox" name="admin" id="admin">
        <label for="admin">Sign up as admin</label>
      </div>
      <button type="submit" class="btn">Signup</button>
    </form>
    <p>Already have an account? <a href="/auth/login">Login</a></p>
  </div>
</body>
</html>
